#!/bin/bash -e 

command -v terraform
command -v ansible-playbook

SCRIPT_DIR=$(dirname $0)
cd $SCRIPT_DIR/../terraform

if [[ ! -f "terraform.tfstate" ]]
then
    echo "No tfstate file found - exiting"
    exit 1
fi

echo "This will destroy all infrastructure maintained in the tfstate file!"
read -p "Continue? [y/N]" -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]]
then
    exit 1
fi

terraform destroy

